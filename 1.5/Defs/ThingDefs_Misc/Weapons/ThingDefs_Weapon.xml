        <tools>
            <li>
                <label>handle</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>30</power>
                <cooldownTime>1.3</cooldownTime>
				<chanceFactor>0.07</chanceFactor>
            </li>
            <li>
                <label>point</label>
                <capacities>
                    <li>Stab</li>
                </capacities>
                <power>80</power>
                <cooldownTime>1.2</cooldownTime>
				<chanceFactor>0.5</chanceFactor>
				<armorPenetration>3.3</armorPenetration>
            </li>
            <li>
                <label>edge</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>100</power>
                <cooldownTime>1.0</cooldownTime>
